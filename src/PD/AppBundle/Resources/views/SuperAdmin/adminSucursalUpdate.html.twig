{% extends '::base.html.twig' %}

{% block stylesheets %}
	<!-- Custom styles for this template -->
	<!-- <link href="{{ asset('bootstrap/css/navbar.css') }}" rel="stylesheet"> -->
{% endblock %}

{% block body %}
<h1 class="page-header">Modificar sucursal</h1>
{{ form_start (formulario) }}
	{{ form_errors(formulario) }}

	<div>
        {{ form_label(formulario.nombre) }}
        {{ form_errors(formulario.nombre) }}
        {{ form_widget(formulario.nombre) }}
        
    </div>

	<div>
        {{ form_label(formulario.estado) }}
        {{ form_errors(formulario.estado) }}
        {{ form_widget(formulario.estado) }}
    </div>

    

    <div>
        {{ form_label(formulario.fecha_ingreso_sistema) }}
        {{ form_errors(formulario.fecha_ingreso_sistema) }}
        {{ form_widget(formulario.fecha_ingreso_sistema, {'value': formulario.fecha_ingreso_sistema.vars.value|date('Y-m-d') }) }}
    </div>

    <div>
        {{ form_widget(formulario.registrar_sucursal) }}
    </div>
{{ form_end(formulario) }}
{% endblock %}