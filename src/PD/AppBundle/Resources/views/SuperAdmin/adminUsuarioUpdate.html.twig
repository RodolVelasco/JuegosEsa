{% extends '::base.html.twig' %}
{% block body %}
	<p>
		{{ form_start (formulario) }}
			{{ form_errors(formulario) }}
			<fieldset>
				<legend>Datos personales</legend>
					{# {{ form_widget(formulario) }} #}
					{{ form_row(formulario.nombre) }}
					{{ form_row(formulario.apellidos) }}
					{{ form_row(formulario.dui) }}
					{{ form_row(formulario.fecha_nacimiento) }}
					{{ form_row(formulario.direccion) }}
			</fieldset>
			
			<fieldset>
				<legend>Datos de acceso</legend>
					{{ form_row(formulario.username) }}
					{{ form_row(formulario.password) }}
					{{ form_row(formulario.email) }}
					{# {{ form_row(formulario.tipo_usuario)}} #}
					{{ form_widget(formulario.tipo_usuario, { 'separator': '' }) }}
					{{ form_row(formulario.estado) }}
			</fieldset>
			{{ form_row(formulario.registrar_usuario) }}
		{{ form_end(formulario) }}
	</p>
{% endblock %}